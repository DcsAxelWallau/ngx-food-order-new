{
  "name": "ngx-food-order-new",
  "version": "2.0.0",
  "description": "Sample project to show Angular project development at DCS FÃ¼rth",
  "main": "index.js",
  "scripts": {
    "compile": "webpack --config config/webpack.config.production.ts",
    "build":
      "cross-env TS_NODE_PROJECT=config/tsconfig.node.json run-s lint test:coverage compile docs",
    "build:production": "cross-env APP_ENV=production npm run build",
    "build:staging": "cross-env APP_ENV=staging npm run build",
    "watch":
      "cross-env TS_NODE_PROJECT=config/tsconfig.node.json webpack-dev-server --config webpack.config.ts",
    "serve": "serve dist -p 8080 -c 0 -s",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --runInBand",
    "test:cleanup": "jest --clearCache",
    "test:e2e": "cross-env TS_NODE_PROJECT=config/tsconfig.e2e.json protractor protractor.conf.ts",
    "test:selenium": "webdriver-manager update && webdriver-manager start",
    "lint": "tslint --project tsconfig.json --exclude 'node_modules/**/*.ts'",
    "docs": "run-s docs:typedoc docs:compodoc",
    "docs:typedoc":
      "typedoc --out dist/typedoc --excludeExternals --ignoreCompilerErrors --includeDeclarations --target ES6 --exclude 'spec/**/*.ts' --mode file ./src",
    "docs:compodoc": "compodoc src -n 'DCS Food Order Docs' -t -p tsconfig.json -d dist/compodoc",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "precommit": "lint-staged",
    "commit": "git cz",
    "commitmsg": "validate-commit-msg",
    "prepush": "npm run build:production",
    "version": "run-s  build:production changelog && git add CHANGELOG.md",
    "postversion": "git push --no-verify && git push --no-verify --tags",
    "postinstall": "ts-node src/scripts/patch-sideeffects.ts",
    "backend:mock": "json-server mock/db.json --port 3001 --delay 500",
    "stats": "sloc --format cli-table --exclude 'libs/.*' src"
  },
  "keywords": [],
  "author": "Marc Remolt <marc.remolt@dcs-fuerth.de>",
  "license": "ISC",
  "devDependencies": {
    "@angular-devkit/build-optimizer": "^0.4.6",
    "@angular/compiler": "^5.2.9",
    "@angular/compiler-cli": "^5.2.9",
    "@compodoc/compodoc": "^1.0.9",
    "@ngtools/webpack": "^6.0.0-beta.6",
    "@types/jest": "^22.2.0",
    "@types/localforage": "0.0.34",
    "@types/lolex": "^2.1.1",
    "@types/node": "^9.4.7",
    "@types/protractor": "^4.0.0",
    "@types/ramda": "github:types/npm-ramda#dist",
    "@types/redux-immutable-state-invariant": "^2.0.4",
    "@types/redux-logger": "^3.0.5",
    "@types/uuid": "^3.4.3",
    "@types/webpack": "^4.1.1",
    "@types/webpack-merge": "^4.1.3",
    "autoprefixer": "^8.1.0",
    "clean-webpack-plugin": "^0.1.19",
    "codelyzer": "^4.2.1",
    "commitizen": "^2.9.6",
    "compression-webpack-plugin": "^1.1.11",
    "conventional-changelog-cli": "^1.3.16",
    "copy-webpack-plugin": "^4.5.1",
    "cross-env": "^5.1.4",
    "cssnano": "^3.10.0",
    "cz-conventional-changelog": "^2.1.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.0.7",
    "husky": "^0.14.3",
    "jest": "^22.4.2",
    "jest-preset-angular": "^5.2.1",
    "json-server": "^0.12.1",
    "lint-staged": "^7.0.0",
    "lolex": "^2.3.2",
    "node-sass": "^4.8.3",
    "npm-run-all": "^4.1.2",
    "offline-plugin": "^4.9.0",
    "postcss-loader": "^2.1.2",
    "prettier": "^1.11.1",
    "protractor": "^5.3.0",
    "raw-loader": "^0.5.1",
    "redux-immutable-state-invariant": "^2.1.0",
    "sass-loader": "^6.0.7",
    "serve": "^6.5.3",
    "sloc": "^0.2.0",
    "style-loader": "^0.20.3",
    "ts-node": "^5.0.1",
    "tslib": "^1.9.0",
    "tslint": "^5.9.1",
    "tslint-consistent-codestyle": "^1.12.1",
    "typedoc": "^0.11.1",
    "typescript": "2.4.2",
    "validate-commit-msg": "^2.14.0",
    "weak": "^1.0.1",
    "webpack": "^4.1.1",
    "webpack-bundle-analyzer": "^2.11.1",
    "webpack-cli": "^2.0.12",
    "webpack-dev-server": "^3.1.1",
    "webpack-merge": "^4.1.2"
  },
  "dependencies": {
    "@angular-redux/router": "^7.0.0",
    "@angular-redux/store": "^7.1.1",
    "@angular/animations": "^5.2.9",
    "@angular/common": "^5.2.9",
    "@angular/core": "^5.2.9",
    "@angular/forms": "^5.2.9",
    "@angular/platform-browser": "^5.2.9",
    "@angular/platform-browser-dynamic": "^5.2.9",
    "@angular/router": "^5.2.9",
    "@angularclass/hmr": "^2.1.3",
    "@fortawesome/fontawesome": "^1.1.4",
    "@fortawesome/fontawesome-free-solid": "^5.0.8",
    "@ngx-translate/core": "^9.1.1",
    "bootstrap": "^4.0.0",
    "core-js": "^2.5.3",
    "hash-it": "^3.1.2",
    "is-primitive": "^3.0.0",
    "localforage": "^1.6.0",
    "normalizr": "^3.2.4",
    "ramda": "^0.25.0",
    "redux": "^3.7.2",
    "redux-batched-actions": "^0.2.1",
    "redux-logger": "^3.0.6",
    "redux-observable": "^0.18.0",
    "redux-persist": "^5.9.1",
    "reselect": "^3.0.1",
    "rxjs": "^5.5.7",
    "uuid": "^3.2.1",
    "zone.js": "^0.8.20"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupTestFrameworkScriptFile": "<rootDir>/config/setup-jest.ts",
    "globals": {
      "ts-jest": {
        "tsConfigFile": "config/tsconfig.node.json"
      },
      "__TRANSFORM_HTML__": true
    },
    "coverageDirectory": "report/coverage",
    "collectCoverageFrom": ["src/libs/**/*.ts", "src/app/**/*.ts", "!**/locale/**"],
    "coverageThreshold": {
      "global": {
        "branches": 20,
        "functions": 40,
        "lines": 45,
        "statements": 40
      }
    },
    "moduleNameMapper": {
      "@dcs/redux-utils": "<rootDir>/src/libs/redux-utils",
      "@dcs/ngx-utils": "<rootDir>/src/libs/ngx-utils"
    }
  },
  "lint-staged": {
    "*.{js,json,css,scss,less,md,ts}": ["prettier --write", "git add"]
  }
}
