{
  "extends": "./config/tsconfig.common.json",
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "outDir": "./build/ngc/src",
    "declaration": false,
    "types": ["node", "mocha", "chai"],
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/**/*.module.ts"],
  "files": ["src/custom-typings.d.ts", "src/main.aot.ts"],
  "angularCompilerOptions": {
    "skipMetadataEmit": true,
    "genDir": "compiled"
  }
}
